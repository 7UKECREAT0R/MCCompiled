define int totalPoints
define bool isGameRunning
define time timeAlive

function reset {
    totalPoints = 0
    isGameRunning = true
    timeAlive = 0s
}

$var _timeformat "mm:ss"

function displayStats {
    if isGameRunning
        actionbar "SCORE: {totalPoints} | TIME: {timeAlive}"
    else
        actionbar "<PAUSED>"
}